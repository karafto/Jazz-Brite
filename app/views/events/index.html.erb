<div class="row" >
  <div class="col-sm-8 col-sm-offset-2">
    <div class="btn-group btn-group-justified">
      <%= link_to "Upcoming Events", events_path(upcoming: true), class: "btn btn-primary btn-md" %>
      <%= link_to "Past Events", events_path(past: true), class: "btn btn-primary btn-md" %>
    </div>
    <% if @events.any? %>
      <% @events.each do |event| %>
        <div class="result content-div" style="background-color:white">
          <div class="text-center">
            <hr>
            <h3><%= link_to event.title, event %></h3>
            <p>Creator: <%= link_to event.user.name, event.user %></p>
            <p>Location: <%= event.location %></p>
            <p>Date: <%= event.date.strftime("%d-%m-%Y") %></p>
            <hr>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="result content-div">
        <ul class="text-center">
          <li><h2 class="text-center">No Events</h2></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<div class="col-md-12 text-center">
            <div class="row">
              <%= will_paginate %>
            </div>
          </div>

