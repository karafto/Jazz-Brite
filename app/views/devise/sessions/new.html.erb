<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-box">

        <h2>Log In</h2>

        <%- resource_class.omniauth_providers.each do |provider| %>
          <p><%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-lg btn-dark" do %>
              <i class="fab fa-facebook-f"></i>
              <%= "Continue with #{OmniAuth::Utils.camelize(provider)}" %>
            <% end %>
          </p>
        <% end -%>

        <p style="padding-top: 10px";>For Demo login, continue with:</p>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, value: 'Demo User', autofocus: true, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= link_to "(Forgot your password?)", new_password_path(resource_name) %><br />
            <%= f.password_field :password, value: ENV['DEMO_PASSWORD'], autocomplete: "off", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <p><%= f.submit "Log in", class: "btn btn-lg btn-dark" %></p>
          </div>
        <% end %>

        <p>New to Jazz-Brite? <%= link_to "Create an account", new_registration_path(resource_name) %><br /></p>
      </div>
    </div>
  </div>
</div>