<p>
Profile for: <strong><%= @user.name %></strong>
</p>

<h1>Created Events</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Date</th>
  </tr>

  <% if @events.any? %>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.title, event %></td>
          <td><%= event.location %></td>
          <td><%= event.date %></td>
        </tr>
      <% end %>
  <% else %>
    <p> No events created. </p>
  <% end %>
<table>

<h1>Past Events</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Date</th>
    </tr>
    <% if @user.past_events.any? %>
      <% @user.past_events.each do |event| %>
        <tr>
          <td><%= link_to event.title, event %></td>
          <td><%= event.location %></td>
          <td><%= event.date %></td>
        </tr>
      <% end %>
    <% else %>
      <td> No events to show. </td>
    <% end %>
  </table>

<h1>Upcoming Events</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Date</th>
    </tr>
    <% if @user.upcoming_events.any? %>
      <% @user.upcoming_events.each do |event| %>
        <tr>
          <td><%= link_to event.title, event %></td>
          <td><%= event.location %></td>
          <td><%= event.date %></td>
        </tr>
      <% end %>
    <% else %>
      <td> No events to show. </td>
    <% end %>
  </table>